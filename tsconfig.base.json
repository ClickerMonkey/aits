{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "incremental": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "target": "es2024",
    "types": ["node"],
    "paths": {
      "@aits/core": ["./packages/core/src"],
      "@aits/ai": ["./packages/ai/src"],
      "@aits/openai": ["./packages/openai/src"],
      "@aits/openrouter": ["./packages/openrouter/src"],
      "@aits/replicate": ["./packages/replicate/src"],
      "@aits/models": ["./packages/models/src"]
    }
  }
}